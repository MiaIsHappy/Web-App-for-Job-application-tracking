extends layout

block content

  h1 #{title}: #{producer.producer_name}
  p= producer.address
  
  if producer_items.length
  
    p #[strong Delete the following items before attempting to delete this producer.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Items
    
      dl
      each item in producer_items
        dt 
          a(href=item.url) #{item.title}
        dd #{item.summary}

  else
    p Do you really want to delete this Producer?
    
    form(method='POST' action='')
      div.form-group
        input#producerid.form-control(type='hidden',name='producerid', required='true', value=producer._id )

      button.btn.btn-primary(type='submit') Delete