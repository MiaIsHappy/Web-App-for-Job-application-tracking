extends layout

block content

  h1 Category: #{cat.name}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 Items
    
    dl
    each item in cat_items
      dt 
        a(href=item.url) #{item.title}
      dd #{item.summary}

    else
      p This category has no items.
      
  hr
  p
    a(href=cat.url+'/delete') Delete Category
  p
    a(href=cat.url+'/update') Update Category