extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      
      label(for='producer_name') Producer Name:
      input#family_name.form-control(type='text', placeholder='Producer Name' name='producer_name' required='true' value=(undefined===author ? '' : author.family_name))
    div.form-group
      input#family_name.form-control(type='text', placeholder='Producer Address' name='address' required='true' value=(undefined===author ? '' : author.family_name))
    div.form-group
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg